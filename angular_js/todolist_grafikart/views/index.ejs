<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<title></title>
	<link type="text/css" href="/css/base.css" rel="stylesheet">
</head>
<body ng-app>

	<section id="todoapp" ng-controller="TodoCtrl">
		<header id="header">
			<h1>Todo List</h1>
			<form action="#" id="todo-form">
				<input type="text" id="new-todo" placeholder="Nouvelle tache"
				autofocus autocomplete="off">
			</form>
		</header>

		<section id="main">
			<ul id="todo-list">
				<li ng-repeat="todo in todos" ng-class="{completed : todo.completed}">
					<div class="view">
						<input type="checkbox" class="toggle">
						<label>{{todo.name}}</label>
						<button class="destroy"></button>
					</div>
					<form action="#">
						<input class="edit" value="etendre le linge">
					</form>
				</li>
			</ul>
		</section>

		<footer id="footer">
			<span id="todo-count"><strong></strong> Taches restantes</span>
		</footer>

	</section>

	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular.min.js"></script>
	<script type="text/javascript" src="/js/app.js"></script>
</body>
</html>
